<table class="styled-table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Body</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <% unless article.archived? %>
        <tr>
          <td><%= article.id %></td>
          <td><%= link_to article.title, article_path(article) %></td>
          <td><%= article.body %></td>
          <td class="actions">
            <%= link_to edit_article_path(article), class: "btn edit-button" do %>
              <i class="fas fa-edit"></i>
            <% end %>

            <%= button_to article_path(article),
                          method: :delete,
                          data: { turbo_confirm: "Are you sure you want to delete?" },
                          class: "btn delete-button" do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

Our blog has <%= Article.public_count %> articles and counting!
<div class="new-article-button">
  <%= link_to "New article", new_article_path, class: "btn" %>
</div>
